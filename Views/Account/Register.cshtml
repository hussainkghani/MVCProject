@model MVCProject.ViewModels.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .navbar a {
            float: left;
            width: 20%; /* Four links of equal widths */
            text-align: center;
            background-color: black;
            color: antiquewhite
        }

            .navbar a:hover {
                background-color: dimgrey;
            }

            .navbar a.active {
                background-color: crimson;
            }
    </style>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/style1.css" rel="stylesheet" />
    <title>Register</title>
</head>
<body>
    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <div class="navbar fixed-top">
        <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
        <a class="nav-link" asp-action="About" asp-controller="Home">About Us</a>
        <a class="nav-link" asp-action="Contact" asp-controller="Home">Contact</a>
        <a class="nav-link" asp-action="Index" asp-controller="Customer">Valued Customers</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
        }
        else
        {
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
        }
    </div>
                <form method="post" asp-action="Register" asp-controller="Account">
                    <div class="container py-5 h-100">
                        <div class="row d-flex justify-content-center align-items-left h-100">
                            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                                    <div class="card-body p-5 text-center">
                                        <div asp-validation-summary="ModelOnly"></div>
                                        <div>
                                            <label asp-for="FirstName">

                                            </label>
                                            <input asp-for="FirstName" type="text" />
                                            <span asp-validation-for="FirstName"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Lastname">

                                            </label>
                                            <input asp-for="Lastname" type="text" />
                                            <span asp-validation-for="Lastname"></span>
                                        </div>
                                        <div>
                                            <label asp-for="PhoneNumber">

                                            </label>
                                            <input asp-for="PhoneNumber" type="text" />
                                            <span asp-validation-for="PhoneNumber"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Email">

                                            </label>
                                            <input asp-for="Email" type="text" />
                                            <span asp-validation-for="Email"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Username">

                                            </label>
                                            <input asp-for="Username" type="text" />
                                            <span asp-validation-for="Username"></span>
                                        </div>
                                        <div>
                                            <label asp-for="Password">
                                            </label>
                                            <input asp-for="Password" type="password" />
                                            <span asp-validation-for="Password"></span>
                                        </div>
                                        <div>
                                            <label asp-for="RememberMe"></label>
                                            <input asp-for="RememberMe" type="checkbox" />
                                            <span asp-validation-for="RememberMe"></span>
                                        </div>
                                        <div>
                                            <button type="submit">Submit Details</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                <footer class="text-center text-white" style="background-color: #caced1;">
                    <!-- Grid container -->
                    <div class="container p-4">
                        <!-- Section: Images -->
                        <section class="">
                            <div class="row">
                                <div class="col-lg-2 col-md-12 mb-4 mb-md-0">
                                    <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                                         data-ripple-color="light">
                                        <img src="~/Images/China.jpg"
                                             class="w-100" />
