@model IEnumerable<MVCProject.Models.Customer>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: burlywood;
        }

        .navbar a {
            float: left;
            width: 20%; /* Four links of equal widths */
            text-align: center;
            background-color: black;
            color: antiquewhite
        }

            .navbar a:hover {
                background-color: dimgrey;
            }

            .navbar a.active {
                background-color: crimson;
            }
    </style>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/style1.css" rel="stylesheet" />
    <title>AllCustomers</title>
</head>
<body>
    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <div class="navbar fixed-top">
        <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
        <a class="nav-link" asp-action="About" asp-controller="Home">About Us</a>
        <a class="nav-link" asp-action="Contact" asp-controller="Home">Contact</a>
        <a class="nav-link" asp-action="Index" asp-controller="Customer">Valued Customers</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
        }
        else
        {
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
        }
    </div>
    <div class="navbar fixed-bottom">
        <a class="nav-link" asp-action="AllCustomers" asp-controller="Customer">All Customers</a>
        <a class="nav-link" asp-action="Create" asp-controller="Customer">Add New Customer</a>
        <a class="nav-link" asp-action="Details" asp-controller="Customer">View Customer Details</a>
        <a class="nav-link" asp-action="Update" asp-controller="Customer">Update Customer Details</a>
    </div>
    <div class="wrapper">
        <img src="~/Images/Tree.jpg" class="img-fluid" />
        <div class="overlay">
            <h2>Welcome @User.Identity.Name</h2>
            <table>
                <thead>
                    <tr>
                        <th>CustomerID</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Department</th>
                        <th>Update</th>
                        <th>Remove</th>
                    </tr>
                </thead>
                @foreach (var cust in Model)
                {
                    <tr>
                        <td>@cust.CustomerID</td>
                        <td>@cust.CustFirstName</td>
                        <td>@cust.CustLastName</td>
                        <td>@cust.CustEmail</td>
                        <td>@cust.CustNumber</td>
                        <td>@cust.Dept</td>
                        <td><a asp-action="Update" asp-controller="Customer" asp-route-id="@cust.CustomerID">Update</a></td>
                        <td><a asp-action="Delete" asp-controller="Customer" asp-route-id="@cust.CustomerID">Delete</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <footer class="text-center text-white" style="background-color: #caced1;">
        <!-- Grid container -->
        <div class="container p-4">
            <!-- Section: Images -->
            <section class="">
                <div class="row">
                    <div class="col-lg-2 col-md-12 mb-4 mb-md-0">
                        <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                             data-ripple-color="light">
                            <img src="~/Images/China.jpg"
                                 class="w-100" />
                            <a href="#!">
                                <div class="mask"
                                     style="background-color: rgba(251, 251, 251, 0.2);"></div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12 mb-4 mb-md-0">
                        <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                             data-ripple-color="light">
                            <img src="~/Images/Korea.jpg"
                                 class="w-100" />
                            <a href="#!">
                                <div class="mask"
                                     style="background-color: rgba(251, 251, 251, 0.2);"></div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12 mb-4 mb-md-0">
                        <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                             data-ripple-color="light">
                            <img src="~/Images/MTFuji.jpg"
                                 class="w-100" />
                            <a href="#!">
                                <div class="mask"
                                     style="background-color: rgba(251, 251, 251, 0.2);"></div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12 mb-4 mb-md-0">
                        <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                             data-ripple-color="light">
                            <img src="~/Images/taiwan.jpg"
                                 class="w-100" />
                            <a href="#!">
                                <div class="mask"
                                     style="background-color: rgba(251, 251, 251, 0.2);"></div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12 mb-4 mb-md-0">
                        <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                             data-ripple-color="light">
                            <img src="~/Images/Thailand.jpg"
                                 class="w-100" />
                            <a href="#!">
                                <div class="mask"
                                     style="background-color: rgba(251, 251, 251, 0.2);"></div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12 mb-4 mb-md-0">
                        <div class="bg-image hover-overlay ripple shadow-1-strong rounded"
                             data-ripple-color="light">
                            <img src="~/Images/Tibet.jpg"
                                 class="w-100" />
                            <a href="#!">
                                <div class="mask"
                                     style="background-color: rgba(251, 251, 251, 0.2);"></div>
                            </a>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Section: Images -->
        </div>
        <!-- Grid container -->
        <!-- Copyright -->
        <div class="text-center p-3" style="background-color:black;">
            © 2021 Copyright:
            <a class="text-white" href="https://www.fbi.gov/">PCAD2Dojo.com</a>
        </div>
        <!-- Copyright -->
    </footer>
</body>
</html>