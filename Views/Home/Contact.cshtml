
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .navbar a {
            float: left;
            width: 20%; /* Four links of equal widths */
            text-align: center;
            background-color: black;
            color: antiquewhite
        }

            .navbar a:hover {
                background-color: dimgrey;
            }

            .navbar a.active {
                background-color: crimson;
            }
    </style>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="~/css/style1.css" rel="stylesheet" />
    <title>Contact</title>
</head>
<body>
    <!-- Optional JavaScript; choose one of the two! -->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <div class="navbar fixed-top">
        <a class="nav-link active" asp-action="Index" asp-controller="Home">Home</a>
        <a class="nav-link" asp-action="About" asp-controller="Home">About Us</a>
        <a class="nav-link" asp-action="Contact" asp-controller="Home">Contact</a>
        <a class="nav-link" asp-action="Index" asp-controller="Customer">Valued Customers</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a class="nav-link" asp-action="Logout" asp-controller="Account">Logout</a>
        }
        else
        {
            <a class="nav-link" asp-action="Login" asp-controller="Account">Login</a>
        }
    </div>
    <div class="wrapper">
        <img src="~/Images/taiwan.jpg" class="img-fluid" />
        <div class="overlay">
            <div class="container=fluid" style="padding-top:30px; padding-left:10px">
                    <div class="row col-md-12 row">
                        <div class="col">
                            <div class="card">
                                <img src="~/Images/Phone Icon.png" class="card-img-top; img-fluid" alt="Phone Picture" style="max-height:200px; max-width:200px;margin:auto;">
                                <div class="card-body">
                                    <h5 class="card-title" style="color:black">Phone</h5>
                                    <p class="card-text" style="color:black">Call anytime between 8am-8pm Monday-Friday at 1-800-225-5324</p>
                                    <a href="https://voice.google.com/about" class="btn btn-primary">Google Voice</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card">
                                <img src="~/Images/Email Icon.png" class="card-img-top; img-fluid" alt="Email Picture" style="max-height:200px; max-width:200px;margin:auto">
                                <div class="card-body">
                                    <h5 class="card-title"style="color:black">Email</h5>
                                    <p class="card-text" style="color:black">Please send all business inquiries to PCAD2Dojo@gmail.com</p>
                                    <a href="https://accounts.google.com/signin/v2/identifier?service=mail&passive=true&rm=false&continue=https%3A%2F%2Fmail.google.com%2Fmail%2F&ss=1&scc=1&ltmpl=default&ltmplcache=2&emr=1&osid=1&flowName=GlifWebSignIn&flowEntry=ServiceLogin" class="btn btn-primary">Compose</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card">
                                <img src="~/Images/Instagram Icon.png" class="card-img-top" alt="Instagram Icon" style="max-height:200px; max-width:200px; margin:auto">
                                <div class="card-body">
                                    <h5 class="card-title"style="color:black">Instagram</h5>
                                    <p class="card-text" style="color:black">Follow us on Instagram</p>
                                    <a href="https://www.instagram.com/" class="btn btn-primary">Follow</a>
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="card">
                                <img src="~/Images/Github Image.jpeg" class="card-img-top" alt="Git" style="max-height:200px; max-width:200px; margin:auto">
                                <div class="card-body">
                                    <h5 class="card-title"style="color:black">Git</h5>
                                    <p class="card-text" style="color:black">Replace with signalR in future</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
